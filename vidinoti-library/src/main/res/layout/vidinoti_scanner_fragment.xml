<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vidinoti.vdarsdk.ScannerFragment">

    <com.vidinoti.android.vdarsdk.VDARAnnotationView
        android:id="@+id/annotationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.vidinoti.vdarsdk.view.VidinotiProgressView
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.vidinoti.vdarsdk.view.VidinotiViewfinderView
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>