<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vidinoti.vdarsdk.ScannerFragment">

    <com.vidinoti.android.vdarsdk.VDARAnnotationView
        android:id="@+id/annotationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="37%"
            tools:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/vidinoti_scanner_overlay_horizontal_margin"
        android:layout_marginTop="@dimen/vidinoti_scanner_overlay_vertical_margin"
        android:layout_marginRight="@dimen/vidinoti_scanner_overlay_horizontal_margin"
        android:layout_marginBottom="@dimen/vidinoti_scanner_overlay_vertical_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:src="@drawable/vidinoti_corner_top_left"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:alpha="0.5"
            android:src="@drawable/vidinoti_corner_top_right"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:src="@drawable/vidinoti_corner_bottom_left"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:src="@drawable/vidinoti_corner_bottom_right"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </RelativeLayout>

</FrameLayout>